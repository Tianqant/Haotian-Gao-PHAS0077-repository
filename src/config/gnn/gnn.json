{
    "Experiment": {
        "version": 0.0,
        "description": "GNN configuration.",
        "path": "../results/test",
        "seed": 12
    },
    "Data": {
        "type": "gnn-pyg",
        "args": {
            "load_path": "../",
            "reduced": 10000,
            "product_links": "virtual",
            "country_links": "virtual",
            "brand_links": "virtual",
            "type_links": "virtual",
            "var_reason_links": "direct",
            "customer_transforms": {
                "removeoutliers": true,
                "dropyob": true,
                "lowAndHighReturns": "train",
                "minMaxScaler": {
                    "cols": ["yearOfBirth",
                             "salesPerCustomer",
                             "returnsPerCustomer"]
                }
            },
            "product_transforms": {
                "removeoutliers": true,
                "lowAndHighReturns": "train",
                "minMaxScaler": {
                    "cols": ["avgGbpPrice",
                             "avgDiscountValue",
                             "salesPerProduct",
                             "returnsPerProduct"]
                }
            }
        }
    },
    "Model": {
        "type": "gnn",
        "loss": "binary-cross-entropy",
        "args": {
            "encoder_name": "sage-conv",
            "encoder_args": {
                "hidden_channels": [64],
                "out_channels": 64,
                "dropout": 0.2,
                "normalize": true
            },
            "decoder_name": "mlp",
            "decoder_args": {
                "hidden_channels": [64],
                "dropout": 0.2
            },
            "optimizer": {
                "name": "adam",
                "args": {
                    "lr": 0.01,
                    "weight_decay": 0.0
                }
            },
            "batch_size": 128,
            "save_epochs": 2
        }
    },
    "Training": {
        "epochs": 100
    }
}
